}
<div class="container">
    <form>
        <label>桌號：
            <select class="form-control" name="table">
                <option>1</option>
            </select>
        </label>

        <hr />
        <table class="table table-striped">
            <thead >
                <tr>
                    <th>品名</th>
                    <th>單價</th>
